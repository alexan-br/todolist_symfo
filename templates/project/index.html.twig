{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('app_home') }}">&lt; Back Home</a>
    <h1>Dashboard</h1>

    <h2>Mes Projets</h2>
    <ul>
        {% for project in projects %}
            <a href="{{ path('app_project_view', { 'id': project.id }) }}">{{ project.name }}</a>
        {% else %}
            <li>Vous n'avez pas encore de projets.</li>
        {% endfor %}
    </ul>

    <h2>Créer un Nouveau Projet</h2>
    {{ form_start(projectForm) }}
        {{ form_row(projectForm.name) }}
        <button type="submit" class="btn btn-primary">Créer</button>
    {{ form_end(projectForm) }}
</div>
{% endblock %}
